    "test": "bun test"
  },
  "devDependencies": {
    "@types/bun": "latest"
  },
  "peerDependencies": {
    "typescript": "^5.6.3"
  },
  "dependencies": {
    "@efflore/cause-effect": "^0.9.4",
    "@efflore/flow-sure": "^0.9.8",
    "@efflore/pulse": "^0.9.1"
