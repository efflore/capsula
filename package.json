{
  "name": "@efflore/capsula",
  "version": "0.9.0",
  "author": "Esther Brunner",
  "main": "index.js",
  "module": "index.ts",
  "type": "module",
  "types": "index.d.ts",
  "description": "Capsula - base class for Web Components with states and UI accessors",
  "license": "MIT",
  "keywords": [
    "Capsula",
    "Web Components",
    "Base Class",
    "States",
    "UI Accessors"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
